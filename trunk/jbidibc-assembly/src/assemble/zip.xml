<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
	  <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.bidib.jbidib:jbidibc</include>
      </includes>
      <excludes>
        <exclude>org.bidib.jbidib:jbidibc:jar:tests</exclude>
      </excludes>
	  <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.bidib.jbidib:jbidibc-tools</include>
      </includes>
	  <unpack>true</unpack>
	  <unpackOptions>
		<includes>
			<include>*.bat</include>
			<include>*</include>
		</includes>
        <excludes>
			<exclude>ch</exclude>
			<exclude>com</exclude>
			<exclude>org</exclude>
			<exclude>uk</exclude>
			<exclude>META-INF</exclude>
		</excludes>
      </unpackOptions>
	  <useTransitiveFiltering>false</useTransitiveFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.bidib.jbidib:jbidibc:jar:tests</include>
      </includes>
	  <unpack>true</unpack>
	  <unpackOptions>
		<includes>
			<include>rxtx/**</include>
		</includes>
      </unpackOptions>
	  <!--useTransitiveFiltering>true</useTransitiveFiltering-->
    </dependencySet>
  </dependencySets>
</assembly>
